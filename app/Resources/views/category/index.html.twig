{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categories list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><a href="{{ path('recepies_index') }}">All</a></td>
            </tr>
            {% for category in categories %}
                <tr>
                    <td><a href="{{ path('recepies_show', { 'name': category }) }}">{{ category.name|capitalize }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
