{% extends 'base.html.twig' %}

{% block body %}
    <h1>Recipe</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{% if recipe.ingredients %}{{ recipe.ingredients|join(', ') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Preperation</th>
                <td>{{ recipe.preperation }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{% if recipe.time %}{{ recipe.time|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ recipe.likes }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
