{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ category|capitalize }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Ingredients</th>
                <th>Preperation</th>
                <th>Time</th>
                <th>Likes</th>
                <th>Edit</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.ingredients }}</td>
                <td>{{ recipe.preperation }}</td>
                <td>{{ recipe.time|date('H:i:s') }}</td>
                <td><a href="{{ path('recipe_like', { 'id': recipe.id, 'category': category }) }}">+</a>{{ recipe.likes }}<a href="{{ path('recipe_dislike', { 'id': recipe.id, 'category': category }) }}">-</a></td>
                <td><a href="{{ path('recipe_edit', { 'id': recipe.id, 'category': category }) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
